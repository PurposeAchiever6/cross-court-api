                      </td>
                    </tr>
                  </table>
                  <table border="0" cellpadding="10" cellspacing="0" role="presentation" width="100%">
                    <tr>
                      <td>
                        <%= link_to confirmation_url(@resource, confirmation_token: @token), { style: button_classes } do %>
                          <strong>VERIFY EMAIL</strong>
                        <% end %>
